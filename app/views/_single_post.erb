<div class="post">
  <h3><a href="/posts/<%=@post.id%>"><%= @post.title %></a></h3>
  <span><%= @post.short_date %></span>
  <content>
    <p><%= @post.content %></p>
  </content>
  <a href="/posts/<%= @post.id %>/update">Update Post</a>
  <a href="/posts/<%= @post.id %>/delete">Delete Post</a>
  <% if @post.tags.any? %>
    <ul>
      <% @post.tags.each do |tag| %>
        <li><%= tag.name %></li>
      <% end %>
    </ul>
  <% end %>
</div>