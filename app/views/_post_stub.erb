<div class="post">
  <h3><a href="/posts/<%=@post.id%>"><%= @post.title %></a></h3>
  <span><%= @post.short_date %></span>
  <a href="/posts/<%=@post.id%>">See more...</a>
  <% if @post.tags.any? %>
    <ul>
      <% @post.tags.each do |tag| %>
        <li><%= tag.name %></li>
      <% end %>
    </ul>
  <% end %>
</div>